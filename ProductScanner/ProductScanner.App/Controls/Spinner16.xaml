<UserControl x:Class="ProductScanner.App.Controls.Spinner16"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ProductScanner.App"
             xmlns:controls="clr-namespace:ProductScanner.App.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="16" d:DesignWidth="16">
    <Grid Width="16" Height="16">

        <controls:Spinner Width="16" Height="16" RenderTransformOrigin="0.5,0.5" >

            <controls:Spinner.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="0.4" ScaleY="0.4    "/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="0" Y="0"/>
                </TransformGroup>
            </controls:Spinner.RenderTransform>
        </controls:Spinner>

    </Grid>
</UserControl>
